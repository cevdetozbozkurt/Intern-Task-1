	<div id="content" class="align-items-center">

		<form method="post" asp-action="EditProduct" enctype="multipart/form-data">
			<input type="hidden" id="Id" name="Id" asp-for="Id" />
			<div class="form-group">
				<input asp-for="Name" class="form-control form-control-user" placeholder="Name" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="Description" class="form-control form-control-user" placeholder="Description" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="Price" class="form-control form-control-user" placeholder="Price" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="Stock" class="form-control form-control-user" placeholder="Stock" />
				<span asp-validation-for="Stock" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input asp-for="Image" class="form-control form-control-user" placeholder="Address" />
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>
			<select asp-for="CategoryId" asp-items="Model.Categories" class="form-select" aria-label="Default select example"> <option value="">Kategori seçiniz</option> </select>
			<br />
			<button type="submit" class="btn btn-primary btn-user btn-block">Submit</button>
		</form>
	</div>
</div>



