@model Category

<h1>Are you sure you want to delete this Category?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
	<input type="hidden" id="Id" name="Id" asp-for="Id" />
	<div class="form-group">
		<input asp-for="Name" class="form-control form-control-user" placeholder="Name" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
</form>

<div class="form-group">
	<form action="Delete" method="post">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
	</form>
</div>