	</div>
	<div id="content">
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Description</th>
						<th scope="col">Image</th>
						<th scope="col">Price</th>
						<th scope="col">Category Name</th>
						<th scope="col">Stock</th>
						<th scope="col">#</th>
						<th scope="col">#</th>
					</tr>
				</thead>
				<tbody>
					@{
						var i = 1;
					}

					@foreach (var item in Model.Products)
					{
						<tr>
							<th scope="row">@i</th>
							<td>@item.Name</td>
							<td>@item.Description</td>
							<td>@item.Image</td>
							<td>@item.Price</td>
							<td>@item.CategoryId</td>
							<td>@item.Stock</td>
							<td><a asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-primary btn-user btn-block">Edit</a></td>
							<td><a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-user btn-outline-danger btn-block">Delete</a></td>
						</tr>
						{
							i++;
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

















