@using Task_1.ViewModels;

@model List<DashboardViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="album py-5 bg-light">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-md-4">
					<div class="card mb-4 box-shadow">
						<div class="card-body">
							<p class="card-text">Name : @item.ProductName</p>
							<p class="card-text">Surname : @item.ProductDescription</p>
							<p class="card-text">Email : @item.Price</p>
							<p class="card-text">City : @item.CategoryName</p>
							<p class="card-text">Street : @item.Quantity</p>
							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group">
									<a asp-controller="Dashboard" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
									<a asp-controller="Dashboard" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
			<div class="d-flex justify-content-between align-items-center">
				<div class="btn-group">
					<a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-outline-secondary">Add Product</a>
				</div>
			</div>
			
		</div>
	</div>
</div>