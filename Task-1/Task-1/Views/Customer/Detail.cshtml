@using Task_1.ViewModels;

@model EditProfileViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="card-body">
	<p class="card-text">Name : @Model.Name</p>
	<p class="card-text">Surname : @Model.Surname</p>
	<p class="card-text">State : @Model.State</p>
	<p class="card-text">City : @Model.City</p>
	<p class="card-text">Street : @Model.Street</p>
	<p class="card-text">Country : @Model.Country</p>
	<div class="d-flex justify-content-between align-items-center">
		<div class="btn-group">
			<a asp-controller="Customer" asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
			@if ( User.Identity.IsAuthenticated && User.IsInRole("admin"))
			{
				<a asp-controller="Customer" asp-action="ListUser" asp-route-id="" class="btn btn-sm btn-outline-secondary">List Users</a>
			}
		</div>
	</div>
</div>

